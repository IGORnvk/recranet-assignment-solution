{% extends './base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <ul class="flex h-20 items-center bg-gray-300 justify-center">
        <li class="mr-6 ml-4">
            <a class="text-blue-500 hover:text-blue-800" href="{{ path('app_home') }}">Home</a>
        </li>
        <li class="mr-6">
            <a class="underline" href="{{ path('app_logout') }}">Logout</a>
        </li>
    </ul>

    <div class="flex justify-center my-16">
        {% block additionalTitle %}{% endblock %}
    </div>

    <div class="flex mb-4">
        {% block content %}{% endblock %}
    </div>
{% endblock %}