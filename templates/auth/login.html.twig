{% extends 'auth/layout.html.twig' %}

{% block title %}Log in{% endblock %}

{% block form %}
    <p class="text-2xl my-4">Log in</p>

    {{ form_errors(form) }}

    {{ form_start(form) }}
    {{ form_row(form.email, {
        widget_class: 'text-black rounded-md bg-gray-200'
    }) }}
    {{ form_row(form.password, {
        widget_class: 'text-black rounded-md bg-gray-200'
    }) }}
    {{ form_row(form._remember_me) }}

    <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.refreshToken('authenticate') }}" />

    <button type="submit" class="bg-sky-600 hover:bg-sky-700 py-2 px-4 mt-4 text-white rounded-lg">Login</button>
    {{ form_end(form) }}
{% endblock %}
